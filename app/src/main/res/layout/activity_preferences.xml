<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#005035"
    android:padding="24dp"
    tools:context=".Preferences">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Information"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_above="@+id/pref_layout"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pref_layout"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstName"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="First Name"
            android:textSize="20sp"
            android:textAlignment="center"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:hint="Last Name"
            android:textSize="20sp"
            android:textAlignment="center"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userAge"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:hint="Age"
            android:textSize="20sp"
            android:textAlignment="center"
            android:inputType="number">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userGender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:hint="Gender"
            android:textAlignment="center"
            android:textSize="20sp"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userMajor"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:hint="Major"
            android:textSize="20sp"
            android:textAlignment="center"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userBio"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:hint="Bio"
            android:textAlignment="center"
            android:textSize="20sp"
            android:inputType="text">

        </com.google.android.material.textfield.TextInputEditText>


    </LinearLayout>

    <Button
        android:id="@+id/savePreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pref_layout"
        android:layout_marginTop="40dp"
        android:backgroundTint="#A49665"
        android:text="Save"
        android:layout_centerInParent="true"/>


</RelativeLayout>